{
    "compilerOptions": {
        "baseUrl": "src",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "rootDir": ".",
        "strict": true,
        "target": "es6",
        "skipLibCheck": true,
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src",
        "src/graphql/mutations/.ts"
    ]
}